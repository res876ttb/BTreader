{
  "name": "BTreader",
  "version": "0.0.1",
  "description": "A cross-platform txt reader.",
  "main": "main.js",
  "repository": "https://github.com/res876ttb/NMD.git",
  "author": "res876ttb <someone10851222@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "watch": "webpack -w",
    "build": "webpack",
    "dev-mac": "./node_modules/.bin/electron .",
    "dev-win": ".\\node_modules\\.bin\\electron .",
    "installer-mac": "webpack && npm run clean-installer && build",
    "installer-win": "webpack && rmdir /s /q installer & build",
    "clean-installer": "rm -rf installer | true"
  },
  "build": {
    "appId": "com.electron.BTreader",
    "files": [
      "!src&{/*}"
    ],
    "directories": {
      "output": "installer"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false
    },
    "dmg": {
      "backgroundColor": "#FCF6E1",
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 420,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "dependencies": {
    "bootstrap": "^4.0.0",
    "electron-window-state": "^4.1.1",
    "fs-extra": "^5.0.0",
    "iconv-lite": "^0.4.19",
    "jquery": "^3.3.1",
    "jschardet": "^1.6.0",
    "jsonfile": "^4.0.0",
    "material-ui": "^1.0.0-beta.35",
    "react": "^16.2.0",
    "react-addons-css-transition-group": "^15.6.2",
    "react-addons-transition-group": "^15.6.2",
    "react-color": "^2.13.8",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.6",
    "reactstrap": "^4.8.0",
    "redux": "^3.7.2",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^0.28.9",
    "electron": "^1.8.1",
    "electron-builder": "^19.55.2",
    "happypack": "^4.0.1",
    "style-loader": "^0.20.1",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.11.1",
    "webpack-target-electron-renderer": "^0.4.0"
  }
}
